{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "module": "ESNext",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "target": "ES2015",
        "allowJs": true
    },
    "include": [
        "src"
    ]
}
